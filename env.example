# Docker Template Manager Environment Variables
# Copy this file to .env and customize the values

# API Security
# Generate a secure API key or leave empty for auto-generation
API_KEY=docker-template-manager-2024-secure-key-12345

# CORS Settings
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8889,http://localhost:5173,http://192.168.1.100:8889

# Timezone
# Set your local timezone
TZ=Europe/Amsterdam

# Debug Mode
# Set to true for development, false for production
FLASK_DEBUG=true

# Directory Paths
# Paths for templates, backups, and config
TEMPLATE_DIR=/templates
BACKUP_DIR=/backups
CONFIG_DIR=/config

# Backup Settings
# Number of days to retain backups
BACKUP_RETENTION_DAYS=30

# Auto Cleanup
# Enable automatic cleanup of old backups
AUTO_CLEANUP_ENABLED=false

# Docker Settings
# Docker daemon socket path
DOCKER_SOCKET=/var/run/docker.sock

# Logging
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security
# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=10485760

# Session Settings
# Session timeout in seconds
SESSION_TIMEOUT=3600
